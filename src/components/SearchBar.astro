---
// SearchBar.astro
interface Props {
  placeholder?: string;
  id: string;
}

const { placeholder = "Buscar...", id } = Astro.props;
---

<div class="container">
  <div class="d-flex flex-column align-items-center my-4 search-sort-container">
    <div class="position-relative w-100 d-flex justify-content-center">
      <input 
        type="text" 
        id={id}
        placeholder={placeholder}
        class="form-control rounded-pill pe-5 search-input" 
      />
    </div>
  </div>
</div>

<style>
  /* Contenedor principal */
  .search-sort-container {
    max-width: 800px; /* Ancho máximo para el contenedor */
    width: 100%;
    margin: 0 auto; /* Centrado horizontal */
    text-align: center; /* Centrar contenido dentro del contenedor */
  }

  /* Input de búsqueda */
  .search-input {
    width: 100%; /* Ancho completo del contenedor */
    max-width: 500px; /* Ancho máximo general para el input */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
  }

  .search-input:focus {
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
    outline: none;
  }

  /* Ajustes para pantallas pequeñas */
  @media (max-width: 576px) {
    .search-input {
      max-width: 80%; /* Cambiar a un 80% en pantallas pequeñas */
    }
  }

  /* Ajustes para pantallas grandes (PC) */
  @media (min-width: 992px) {
    .search-sort-container {
      max-width: 800px; /* Ajusta según el ancho deseado */
    }

    .search-input {
      max-width: calc(100% - 200px); /* Deja espacio para el select */
      flex-grow: 1; /* Hace que el input crezca más */
    }
  }
</style>

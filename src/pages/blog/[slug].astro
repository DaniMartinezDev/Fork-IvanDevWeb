---
import { getCollection, type CollectionEntry } from "astro:content";
import Navbar from "../../components/navbar.astro";
import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
  const blogEntries: CollectionEntry<"posts">[] = await getCollection("posts");

  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="/icon.png" />
    <title>{entry.data.title} - Ivan FX</title>
    <!-- Cargar Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: var(--bs-body-bg); /* Se ajusta automáticamente al tema */
            color: var(--bs-body-color); /* Texto también se ajusta */
            font-family: 'Arial', sans-serif;
        }

        /* Estilos para la tarjeta */
        .card {
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            background-color: var(--bs-card-bg); /* Dependiendo del tema */
            color: var(--bs-card-color);
        }

        .container {
            margin-top: 40px;
            margin-bottom: 40px;
        }

        hr {
            border-color: var(--bs-divider-color); /* Color del separador dinámico */
        }

        .content {
            line-height: 1.7;
            font-size: 1.1rem;
        }

        pre {
            background-color: #1e1e1e;
            color: #f8f8f2;
            padding: 15px;
            border-radius: 10px;
            overflow-x: auto;
            margin-top: 20px;
        }

        code {
            color: #66d9ef;
        }

        .card-footer {
            background-color: var(--bs-card-footer-bg);
            border-top: 1px solid var(--bs-divider-color);
            padding: 20px;
        }

        /* Botones */
        .btn-primary {
            background-color: #00c6ff;
            border: none;
            box-shadow: 0 4px 12px rgba(0, 198, 255, 0.3);
        }

        .btn-primary:hover {
            background-color: #00a3cc;
        }

    </style>
</head>
<body>
    <Navbar/>

    <!-- Contenedor con márgenes y espaciado -->
    <div class="container">
        <div class="row">
            <div class="col-12">
                <article class="card">
                    <div class="card-body">
                        <h1 class="card-title">{entry.data.title}</h1>
                        <p class="text-muted">Publicado el: {entry.data.createdAt}</p>
                        <hr class="my-4">
                        <div class="content">
                            <Content />
                        </div>
                    </div>
                    <div class="card-footer text-muted text-center">
                        <h4>Comentarios</h4>
                        <div class="comments-section">
                            <script src="https://utteranc.es/client.js"
                                repo="ElIvanFX/newweb"
                                issue-term="pathname"
                                theme="icy-dark"
                                crossorigin="anonymous"
                                async>
                            </script>
                        </div>
                    </div>                    
                </article>
            </div>
        </div>
    </div>

    <Footer/>

    <!-- Script de Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

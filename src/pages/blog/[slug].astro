---
import { getCollection, type CollectionEntry } from "astro:content";
import Navbar from "../../components/navbar.astro";
import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
  const blogEntries: CollectionEntry<"posts">[] = await getCollection("posts");

  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="/icon.png" />
    <title>{entry.data.title} - Ivan FX</title>
    <!-- Cargar Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212; /* Fondo oscuro */
        }
        .content {
            margin-top: 20px; /* Espaciado superior */
        }
        .card {
            border-radius: 10px; /* Bordes redondeados */
        }
        .comments-section {
            margin-top: 20px; /* Espaciado superior para comentarios */
        }
        h4 {
            margin: 20px 0; /* Margen para el título de comentarios */
        }
    </style>
</head>
<body>
    <Navbar/>

    <!-- Contenedor con márgenes y espaciado -->
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-12">
                <article class="card shadow-lg">
                    <div class="card-body">
                        <h1 class="card-title">{entry.data.title}</h1>
                        <p class="text-muted">Publicado el: {entry.data.createdAt}</p>
                        <hr class="my-4">
                        <div class="content">
                            <Content />
                        </div>
                    </div>
                    <div class="card-footer text-muted text-center">
                        <h4>Comentarios</h4>
                        <div class="comments-section">
                            <script src="https://utteranc.es/client.js"
                                repo="ElIvanFX/newweb"
                                issue-term="pathname"
                                theme="icy-dark"
                                crossorigin="anonymous"
                                async>
                            </script>
                        </div>
                    </div>                    
                </article>
            </div>
        </div>
    </div>
    

    <Footer/>

    <!-- Script de Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
